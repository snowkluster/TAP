<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Control Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="container mt-5">
    <h1>Ingestion Engine Control Panel</h1>

    <h2 class="mt-4">Cracked Scripts</h2>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckAccCracked">
        <label class="form-check-label" for="flexSwitchCheckAccCracked">Run acc_cracked.py</label>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCrackedCombo">
        <label class="form-check-label" for="flexSwitchCheckCrackedCombo">Run cracked_combo.py</label>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCrackedHire">
        <label class="form-check-label" for="flexSwitchCheckCrackedHire">Run cracked_hire.py</label>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCrackedSource">
        <label class="form-check-label" for="flexSwitchCheckCrackedSource">Run cracked.py</label>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckProductsCracked">
        <label class="form-check-label" for="flexSwitchCheckProductsCracked">Run products_cracked.py</label>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckServiceCracked">
        <label class="form-check-label" for="flexSwitchCheckServiceCracked">Run service_cracked.py</label>
    </div>

    <h2 class="mt-4">Breach Forum Scripts</h2>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckBreachAcc">
        <label class="form-check-label" for="flexSwitchCheckBreachAcc">Run cracked_acc.py</label>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDatabases">
        <label class="form-check-label" for="flexSwitchCheckDatabases">Run databases.py</label>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckOtherLeaks">
        <label class="form-check-label" for="flexSwitchCheckOtherLeaks">Run other_leaks.py</label>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckStealer">
        <label class="form-check-label" for="flexSwitchCheckStealer">Run stealer.py</label>
    </div>

    <h2 class="mt-4">Doxbin Script</h2>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDoxbin">
        <label class="form-check-label" for="flexSwitchCheckDoxbin">Run doxbin.py</label>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const switches = [
                { id: 'flexSwitchCheckAccCracked', endpoint: '/cracked/acc' },
                { id: 'flexSwitchCheckCrackedCombo', endpoint: '/cracked/combo' },
                { id: 'flexSwitchCheckCrackedHire', endpoint: '/cracked/hire' },
                { id: 'flexSwitchCheckCrackedSource', endpoint: '/cracked/source' },
                { id: 'flexSwitchCheckProductsCracked', endpoint: '/cracked/products' },
                { id: 'flexSwitchCheckServiceCracked', endpoint: '/cracked/service' },
                { id: 'flexSwitchCheckBreachAcc', endpoint: '/breached/acc' },
                { id: 'flexSwitchCheckDatabases', endpoint: '/breached/databases' },
                { id: 'flexSwitchCheckOtherLeaks', endpoint: '/breached/other_leaks' },
                { id: 'flexSwitchCheckStealer', endpoint: '/breached/stealer' },
                { id: 'flexSwitchCheckDoxbin', endpoint: '/doxbin/doxbin' },
            ];

            switches.forEach(({ id, endpoint }) => {
                const toggleSwitch = document.getElementById(id);

                toggleSwitch.addEventListener('change', async () => {
                    const isChecked = toggleSwitch.checked;

                    try {
                        const response = await fetch(endpoint, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ running: isChecked }),
                        });

                        const data = await response.json();

                        if (!response.ok) {
                            throw new Error(data.message);
                        }

                        alert(data.message);
                    } catch (error) {
                        alert('Error: ' + error.message);
                    }
                });
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
